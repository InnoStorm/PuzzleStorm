                                RenderTransformOrigin="0.5,0.5"
                                Source="{Binding ListaShuffleSlika[15]}">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform Angle="-45" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>

        <!--  Separator  -->
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Rectangle
                Width="1"
                Margin="0,20"
                VerticalAlignment="Stretch"
                Stroke="#4D1F1F" />
        </StackPanel>

        <Grid Grid.Column="2" Margin="0,50">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  PLAY DEO  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Play labela  -->
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Content="PLAY"
                    FontSize="30"
                    FontWeight="ExtraBold" />

                <!--  Play controla  -->
                <local:GameWhoPlaysControl Grid.Row="1" Margin="15,15" />
            </Grid>

            <!--  Separator  -->
            <Separator
                Grid.Row="1"
                Margin="30,15"
                Background="#4D1F1F" />

            <!--  SCORE DEO  -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  SCORE labela  -->
                <Label
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Content="SCORE"
                    FontSize="30"
                    FontWeight="ExtraBold" />

                <!--  SCORE controla  -->
                <local:GameScoreControl Grid.Row="1" Margin="15 15"/>
            </Grid>
        </Grid>
    </Grid>
</local:BasePage>

